extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Fruits, Vegetables ...' name='name' value=(undefined===category ? '' : category.name))
      label(for='description') Description:
      input#name.form-control(type='text', placeholder='describe the category' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg