extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Item:
      input#name.form-control(type='text', placeholder='Banana, Apple Juice ...' name='name' value=(undefined===item ? '' : item.name))
      label(for='description') Description:
      input#name.form-control(type='text', placeholder='describe the item' name='description' value=(undefined===item ? '' : item.description))
      label(for='category') Category:
      select#name.form-control(name='category')
        each category in categories
          option(style='display: inline; padding-right:10px;', value=category._id) #{category.name}
      label(for='price') Price:
      input#name.form-control(type='number', step='0.01', placeholder='10.99' name='price' value=(undefined===item ? '' : item.price))
      label(for='stock') Stock:
      input#name.form-control(type='number', placeholder='11' name='stock' value=(undefined===item ? '' : item.stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg